#:import get_dato_inflacion datoInflacion.get_dato_inflacion

<MyGridLayout>

    input_monto:input_monto
    input_n_cuotas:input_n_cuotas
    input_inflacion_anual_estimada:input_inflacion_anual_estimada
    
    GridLayout:
        id: firstGridLayout
        cols: 1
        size: root.width, root.height
        
        Label:
            text: 'CUOTADORA'
            font_size: 32
            background_color: 28/255.0, 28/255.0, 28/255.0, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            text:'¡Enteráte de cuánto te ahorrás al comprar en cuotas sin interés!'
            background_color: 28/255.0, 28/255.0, 28/255.0, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size

        GridLayout:
            id: secondGridLayout
            cols:2
            size: root.width, root.height

            Label:
                text: 'Monto:'
            TextInput:
                id: input_monto
                multiline: False
                input_filter: 'float'
                write_tab: False

            Label:
                text: 'Número de cuotas:'
            TextInput:
                id: input_n_cuotas
                multiline: False
                input_filter: 'float'
                write_tab: False

            Label:
                text: 'Inflación anual estimada:'
            TextInput:
                id: input_inflacion_anual_estimada
                hint_text: str(get_dato_inflacion())
                multiline: False
                write_tab: False

        Button:
            text: 'Calcular'
            on_press: root.calcular()
            size_hint_y: None
            height: 50
            size_hint_x: None
            width: 200
            background_normal: ''
            background_color: 28/255.0, 28/255.0, 28/255.0, 1

        GridLayout:
            id: secondGridLayout
            cols: 2
            size: root.width, root.height

            Label:
                text: 'Valor presente neto'
            Label:
                id: label_npv
                text: ''

            Label:
                text: 'El descuento es del'
            Label:
                id: label_descuento
                text: ''
            Label:
                text: 'Te ahorrás'
            Label:
                id: label_ahorro
                text: ''            